<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Manager_home">

    <ImageView
        android:layout_width="140dp"
        android:layout_height="147dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/smartconnectfuel" />


    <TextView
        android:id="@+id/title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="135dp"
        android:textSize="25dp"

        android:text="Welcome Manager"/>


    <GridLayout
        android:layout_width="500dp"
        android:layout_height="450dp"
        android:layout_below="@id/title_view"
        android:layout_marginTop="40dp"
        android:columnCount="2"
        android:rowCount="3">

        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="139dp"
                android:layout_height="159dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="118dp"
                    android:layout_height="112dp"
                    android:src="@drawable/managesales" />

                <Button
                    android:id="@+id/msales_button"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="10dp"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:text="Manage Sales"
                    app:backgroundTint="#D3FFC107"
                    app:cornerRadius="50sp"  />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="139dp"
                android:layout_height="159dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="118dp"
                    android:layout_height="112dp"
                    android:src="@drawable/manageemployee" />

                <Button
                    android:id="@+id/meempbutton"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="10dp"
                    android:textSize="11dp"
                    android:textStyle="bold"
                    android:text="Manage Employees"
                    app:backgroundTint="#D3FFC107"
                    app:cornerRadius="50sp"  />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="139dp"
                android:layout_height="159dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="118dp"
                    android:layout_height="112dp"
                    android:src="@drawable/managesuppliers" />

                <Button

                    android:id="@+id/m_sup_button"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="10dp"
                    android:textSize="11dp"
                    android:textStyle="bold"
                    android:text="Manage Suppliers"
                    app:backgroundTint="#D3FFC107"
                    app:cornerRadius="50sp"  />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="139dp"
                android:layout_height="159dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="118dp"
                    android:layout_height="112dp"
                    android:src="@drawable/managestocks" />

                <Button
                    android:id="@+id/m_stock"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="10dp"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:text="Manage Stocks"
                    app:backgroundTint="#D3FFC107"
                    app:cornerRadius="50sp"  />




            </LinearLayout>

            <TextView
                android:layout_width="249dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="110dp"
                android:layout_marginTop="840dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="-5dp"
                android:text="Â©MIRACLE MATRIX.2023" />

        </androidx.cardview.widget.CardView>








    </GridLayout>







</RelativeLayout>



